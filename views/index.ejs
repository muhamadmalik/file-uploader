<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function showFolder(folderId) {
            document.querySelectorAll('.folder-files').forEach(el => el.classList.add('hidden'));
            document.getElementById('folder-' + folderId)?.classList.remove('hidden');
        }
        
        function showFileDetails(fileId, filename, url, createdAt) {
            document.getElementById('file-details').innerHTML = `
                <h2 class='text-lg font-semibold'>File Details</h2>
                <p><strong>Name:</strong> ${filename}</p>
                <p><strong>Created At:</strong> ${new Date(createdAt).toLocaleString()}</p>
                <a href="${url}" target="_blank" class='text-blue-400 hover:underline'>Open File</a>
            `;
        }
    </script>
</head>
<body class="bg-[#121212] text-gray-200 min-h-screen">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-64 border-r border-gray-800 p-4">
            <div class="text-lg font-semibold pb-4"><%= user.username %></div>
            
            <!-- Folders -->
            <% user.folders.forEach(folder => { %>
                <div class="py-2 cursor-pointer hover:bg-[#1a1a1a]" onclick="showFolder('<%= folder.id %>')">
                    <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                    </svg>
                    <%= folder.name %>
                </div>
            <% }) %>
            
            <!-- Files outside folders -->
            <div class="mt-4 border-t border-gray-800 pt-2">
                <% user.files.filter(file => !file.folderId).forEach(file => { %>
                    <div class="py-2 cursor-pointer hover:bg-[#1a1a1a]" onclick="showFileDetails('<%= file.id %>', '<%= file.filename %>', '<%= file.url %>', '<%= file.createdAt %>')">
                        <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                        </svg>
                        <%= file.filename %>
                    </div>
                <% }) %>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="flex-1 p-4">
            <h1 class="text-xl">File Manager</h1>
            
            <!-- Folder Files View -->
            <% user.folders.forEach(folder => { %>
                <div id="folder-<%= folder.id %>" class="folder-files hidden">
                    <h2 class="text-lg font-semibold pb-2"><%= folder.name %></h2>
                    <% folder.files.forEach(file => { %>
                        <div class="py-2 cursor-pointer hover:bg-[#1a1a1a]" onclick="showFileDetails('<%= file.id %>', '<%= file.filename %>', '<%= file.url %>', '<%= file.createdAt %>')">
                            <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                            </svg>
                            <%= file.filename %>
                        </div>
                    <% }) %>
                </div>
            <% }) %>
            
            <!-- File Details View -->
            <div id="file-details" class="mt-4 p-4 border border-gray-800 rounded hidden"></div>
        </div>
    </div>
</body>
</html>
