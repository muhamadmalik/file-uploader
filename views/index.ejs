<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Uploader</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#121212] text-gray-200 min-h-screen">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-64 border-r border-gray-800">
            <div class="p-4 space-y-2">
                <button class="w-full flex items-center px-4 py-2 bg-[#1a1a1a] rounded hover:bg-[#252525] transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    New Folder
                </button>
                <button class="w-full flex items-center px-4 py-2 bg-[#1a1a1a] rounded hover:bg-[#252525] transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    New File
                </button>
            </div>

            <!-- Folder Tree -->
            <div class="mt-4">
                <div class="px-4 py-2 hover:bg-[#1a1a1a] cursor-pointer">
                    <div class="flex items-center">
                        <svg class="w-4 h-4 mr-2 transform rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                        <%= user.username %>
                    </div>
                </div>
                <div class="pl-8 py-2 hover:bg-[#1a1a1a] cursor-pointer">
                    asdf
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1">
            <!-- Header -->
            <header class="flex justify-between items-center p-4 border-b border-gray-800">
                <h1 class="text-xl">File Uploader</h1>
                <button class="p-2 hover:bg-[#252525] rounded">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                    </svg>
                </button>
            </header>

            <!-- File List -->
            <div class="p-4">
                <div class="grid grid-cols-12 text-sm text-gray-400 pb-2 border-b border-gray-800">
                    <div class="col-span-6">Name</div>
                    <div class="col-span-3">Size</div>
                    <div class="col-span-3">Created</div>
                </div>

                <div class="space-y-1 mt-2">
                    <% [{type: 'folder', name: 'Photos', size: '43', created: '232323'}].forEach(file => { %>
                        <div class="grid grid-cols-12 text-sm py-2 px-2 rounded hover:bg-[#1a1a1a] cursor-pointer">
                            <div class="col-span-6 flex items-center">
                                <% if(file.type === 'folder') { %>
                                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                                    </svg>
                                <% } else { %>
                                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                                    </svg>
                                <% } %>
                                <%= file.name %>
                            </div>
                            <div class="col-span-3"><%= file.size || '-' %></div>
                            <div class="col-span-3"><%= file.created %></div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>